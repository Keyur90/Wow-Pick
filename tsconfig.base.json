      "@rf2/picking/features/print-selection": ["libs/picking/features/print-selection/src/index.ts"],
      "@rf2/picking/features/dispatch-order": ["libs/picking/features/dispatch-order/src/index.ts"],
      "@rf2/picking/features/zero-totes-to-pick": ["libs/picking/features/zero-totes-to-pick/src/index.ts"]
