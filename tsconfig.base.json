      "@rf2/picking/data/mocks": ["libs/picking/data/mocks/src/index.ts"],
      "@rf2/shared/global-state": ["libs/shared/global-state/src/index.ts"],
      "@rf2/shared/utility": ["libs/shared/utility/src/index.ts"],
      "@rf2/shared/feature-flags": ["libs/shared/feature-flags/src/index.ts"],
      "@rf2/picking/features/trip-item": ["libs/picking/features/trip-item/src/index.ts"],
      "@rf2/shared/icons": ["libs/shared/icons/src/index.ts"],
      "@rf2/picking/features/supply": ["libs/picking/features/supply/src/index.ts"],
      "@rf2/picking/features/trip-collectible": ["libs/picking/features/trip-collectible/src/index.ts"],
